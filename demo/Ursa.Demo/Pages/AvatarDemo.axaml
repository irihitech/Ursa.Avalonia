<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:u="https://irihi.tech/ursa"
             xmlns:vm="clr-namespace:Ursa.Demo.ViewModels"
             x:CompileBindings="True"
             x:DataType="vm:AvatarDemoViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="850"
             x:Class="Ursa.Demo.Pages.AvatarDemo">
    <Design.DataContext>
        <vm:AvatarDemoViewModel />
    </Design.DataContext>
    <StackPanel>
        <StackPanel Orientation="Horizontal" Spacing="8">
            <u:Avatar Content="U" Classes="ExtraExtraSmall" />
            <u:Avatar Content="U" Classes="ExtraSmall" />
            <u:Avatar Content="U" Classes="Small" />
            <u:Avatar Content="U" Classes="Default" />
            <u:Avatar Content="U" Classes="Medium" />
            <u:Avatar Content="U" Classes="Large" />
            <u:Avatar Content="U" Classes="ExtraLarge" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Spacing="8">
            <u:Avatar Content="AS" />
            <u:Avatar Content="BM" Classes="Red" />
            <u:Avatar Content="TJ" Classes="LightBlue" />
            <u:Avatar Content="ZL" Foreground="#F56A00" Background="#FDE3CF" />
            <u:Avatar Content="YZ" Background="#87D068" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Spacing="8">
            <u:Avatar Content="AS" />
            <u:Avatar Content="Semi" Padding="4" />
            <u:Avatar Content="Semi" Padding="10" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Spacing="8">
            <u:Avatar Content="U" />
            <u:Avatar Content="U" Classes="Square" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Spacing="8">
            <u:Avatar Source="../Assets/IRIHI.png" />
            <u:Avatar Source="../Assets/WORLD.png" />
            <u:Avatar Source="../Assets/Ursa.ico" />
            <u:Avatar Source="../Assets/Ursa.ico" Classes="Small" />
            <u:Avatar Classes="Red" Content="BD" Command="{Binding ClickCommand}">
                <u:Avatar.HoverMask>
                    <Border
                        Background="#16161A"
                        Opacity="0.6"
                        Width="{Binding $parent.Width}"
                        Height="{Binding $parent.Height}">
                        <PathIcon
                            Theme="{StaticResource InnerPathIcon}"
                            Data="{StaticResource SemiIconCamera}" />
                    </Border>
                </u:Avatar.HoverMask>
            </u:Avatar>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <StackPanel.Styles>
                <Style Selector="u|Avatar">
                    <Setter Property="Content" Value="{Binding Content}" />
                    <Setter Property="Command" Value="{Binding ClickCommand}" />
                </Style>
            </StackPanel.Styles>
            <u:Avatar Classes="Red" />
            <u:Avatar Classes="Pink" />
            <u:Avatar Classes="Purple" />
            <u:Avatar Classes="Violet" />
            <u:Avatar Classes="Indigo" />
            <u:Avatar Classes="Blue" />
            <u:Avatar Classes="LightBlue" />
            <u:Avatar Classes="Cyan" />
            <u:Avatar Classes="Teal" />
            <u:Avatar Classes="Green" />
            <u:Avatar Classes="LightGreen" />
            <u:Avatar Classes="Lime" />
            <u:Avatar Classes="Yellow" />
            <u:Avatar Classes="Amber" />
            <u:Avatar Classes="Orange" />
            <u:Avatar Classes="Grey" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <u:Avatar Classes="Square ExtraLarge Green" Source="../Assets/Ursa.ico">
                <u:Avatar.HoverMask>
                    <Border
                        Background="#16161A"
                        Opacity="0.6"
                        Width="{Binding $parent.Width}"
                        Height="{Binding $parent.Height}">
                        <PathIcon
                            Theme="{StaticResource InnerPathIcon}"
                            Width="{Binding $parent[u:Avatar].FontSize}"
                            Height="{Binding $parent[u:Avatar].FontSize}"
                            Data="{StaticResource SemiIconCamera}" />
                    </Border>
                </u:Avatar.HoverMask>
            </u:Avatar>
        </StackPanel>

        <u:NumericIntUpDown
            Name="n"
            HorizontalAlignment="Left"
            Width="200"
            AllowDrag="True"
            Maximum="20"
            Minimum="-5"
            Value="3" />

        <u:AvatarGroup MaxCount="{Binding #n.Value}">
            <u:Avatar Content="AS" />
            <u:Avatar Content="BM" Classes="Red" />
            <u:Avatar Content="TJ" Classes="LightBlue" />
            <u:Avatar Content="ZL" Foreground="#F56A00" Background="#FDE3CF" />
            <u:Avatar Content="YZ" Background="#87D068" />
        </u:AvatarGroup>
        <u:AvatarGroup MaxCount="{Binding #n.Value}" ItemsSource="{Binding Items}" />
        <u:AvatarGroup MaxCount="{Binding #n.Value}" ItemsSource="{Binding People}">
            <u:AvatarGroup.ItemTemplate>
                <DataTemplate DataType="vm:Person">
                    <u:Avatar
                        Theme="{StaticResource AvatarGroupItemTheme}"
                        Content="{Binding Name}"
                        Command="{Binding $parent[UserControl].((vm:AvatarDemoViewModel)DataContext).ShowCommand}"
                        CommandParameter="{Binding $self.Content}" />
                </DataTemplate>
            </u:AvatarGroup.ItemTemplate>
        </u:AvatarGroup>
    </StackPanel>
</UserControl>